generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  EMPLOYEE
  ADMIN
}

enum TimeEntryType {
  IN
  BREAK_START
  BREAK_END
  OUT
}

enum AdjustmentStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELED
}

model Organization {
  id        String   @id @default(uuid())
  name      String   @unique
  timezone  String   @default("America/Maceio")
  createdAt DateTime @default(now())

  users Users[]
}

model Users {
  id           String   @id @default(uuid())
  orgId        String
  name         String
  email        String
  passwordHash String
  role         Role     @default(EMPLOYEE)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  organization Organization @relation(fields: [orgId], references: [id])

  @@unique([orgId, email])
  @@index([orgId, role])
}

